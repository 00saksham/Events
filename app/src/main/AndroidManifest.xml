<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dummy.events">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AddEvent"
            android:label="@string/title_activity_add_event"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".EventsList"
            android:theme="@style/AppTheme.NoActionBar.NoStatusBar"></activity>
        <activity
            android:name=".IndividualEvent"
            android:theme="@style/AppTheme.NoActionBar.NoStatusBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Login"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatus">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>